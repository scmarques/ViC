<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/myScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
        android:id="@+id/txtAndar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="0.7"
        android:text="Térreo"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="43dp"
        android:text="@string/voceEsta"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEnviar"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="45dp"
        android:backgroundTint="#6f8eff"
        android:shadowColor="@color/black"
        android:elevation="20dp"
        android:text="@string/ir_para"
        android:textColor="@color/white"
        android:letterSpacing="0"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtAndar" />

    <EditText
        android:id="@+id/edtAndar"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="45dp"
        android:background="#c4c4c4"
        android:ems="10"
        android:hint="@string/digite_um_andar"
        android:inputType="number"
        android:padding="15dp"
        android:textColorHint="#9b9b9b"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <Button
                android:id="@+id/btnSair"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="126dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="#C91616"
                android:elevation="20dp"
                android:text="Sair"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/btnEnviar"
                app:layout_constraintStart_toEndOf="@+id/btnEntrar"
                app:layout_constraintTop_toBottomOf="@+id/textAlguem" />

            <Button
                android:id="@+id/btnEntrar"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="126dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:backgroundTint="#20993B"
                android:elevation="20dp"
                android:text="Entrar"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/btnSair"
                app:layout_constraintStart_toStartOf="@+id/btnEnviar"
                app:layout_constraintTop_toBottomOf="@+id/textAlguem" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="262dp"
        android:layout_height="249dp"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgUp"
        app:srcCompat="@drawable/background_circle" />

            <TextView
                android:id="@+id/textAlguem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="64dp"
                android:text="Alguém irá..."
                android:textColor="@color/black"
                android:textFontWeight="800"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="@+id/btnSair"
                app:layout_constraintStart_toStartOf="@+id/btnEntrar"
                app:layout_constraintTop_toBottomOf="@+id/btnEnviar" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginBottom="60dp"
        android:gravity="center_horizontal"
        android:text="pessoas no \nelevador"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView" />

    <TextView
        android:id="@+id/txtLotacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="55dp"
        android:gravity="center_horizontal"
        android:text="0/5 "
        android:textColor="@color/white"
        android:textSize="62sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imgUp"
        android:layout_width="37dp"
        android:layout_height="38dp"
        android:layout_marginStart="40dp"
        android:background="#C3BECA"
        android:backgroundTint="#DFC2FB"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/txtAndar"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@android:drawable/stat_sys_upload_done" />

    <ImageView
        android:id="@+id/imgDown"
        android:layout_width="37dp"
        android:layout_height="38dp"
        android:layout_marginStart="40dp"
        android:background="#C3BECA"
        android:backgroundTint="#DFC2FB"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/txtAndar"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@android:drawable/stat_sys_download_done" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdlHalfHor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdlHalfVer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdl75Hor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
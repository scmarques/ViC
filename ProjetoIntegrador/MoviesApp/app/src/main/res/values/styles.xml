<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonTry">
        <item name="android:lineHeight">40dp</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textSize">@dimen/large_sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingLeft">@dimen/mtrl_btn_text_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/mtrl_btn_text_btn_padding_right</item>
        <item name="iconTint">@color/white</item>
        <item name="iconPadding">@dimen/mtrl_btn_text_btn_icon_padding</item>
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/white</item>
    </style>


    <style name="StandardTitle">
        <item name="android:lineHeight">40dp</item>
        <item name="android:textColor">@color/grey_title</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textSize">@dimen/large_sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DetailedMovieTitle">
        <item name="android:lineHeight">40dp</item>
        <item name="android:textColor">@color/blue_title</item>
        <item name="android:textFontWeight">900</item>
        <item name="android:textSize">@dimen/large_sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="InferiorMovieTitle">
        <item name="android:lineHeight">40dp</item>
        <item name="android:textColor">@color/blue_title</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textSize">@dimen/large_sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SearchBarText">
        <item name="android:lineHeight">24dp</item>
        <item name="android:textColor">@color/black_50_opacity</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/medium_sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SmallStandardText">
        <item name="android:lineHeight">24dp</item>
        <item name="android:textColor">@color/grey_text</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/small_sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="InfoMovieDetailsText">
        <item name="android:lineHeight">20dp</item>
        <item name="android:textColor">@color/grey_text</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/small_sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PercentText">
        <item name="android:lineHeight">22dp</item>
        <item name="android:textColor">@color/blue_percent_text</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/small_sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CastText">
        <item name="android:lineHeight">20dp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/small_sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SmallRatingText">
        <item name="android:lineHeight">14dp</item>
        <item name="android:textColor">@color/grey_spc_text</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/spcsmall_sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitlesInDetailedMovie">
        <item name="android:lineHeight">28dp</item>
        <item name="android:textColor">@color/blue_title</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/medium_sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomCardViewStyle"  parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomLeft">50dp</item>
    </style>

    <style name="MainTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/large_sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/grey_title_30_opacity</item>
        <item name="android:alpha">0.3</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:letterSpacing">-0.05</item>
    </style>

    <style name="LabelRatingCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">45dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">45dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Card.Media" parent="">
        <item name="cornerSizeBottomLeft">40dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>


</resources>